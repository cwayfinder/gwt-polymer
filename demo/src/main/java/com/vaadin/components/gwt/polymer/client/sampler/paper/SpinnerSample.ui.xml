<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.vaadin.components.gwt.polymer.client.widget'>
    
    <ui:style>
        @external .circle;

        .blue::shadow .circle {
            border-color: #4285f4;
        }

        .red::shadow .circle {
            border-color: #db4437;
        }

        .yellow::shadow .circle {
            border-color: #f4b400;
        }

        .green::shadow .circle {
            border-color: #0f9d58;
        }
    </ui:style>
    
    <g:HTMLPanel>
        <p:PaperSpinner ui:field="spinner1" addStyleNames="{style.blue}" active=""/>
        <p:PaperSpinner ui:field="spinner2" addStyleNames="{style.red}" active=""/>
        <p:PaperSpinner ui:field="spinner3" addStyleNames="{style.yellow}" active=""/>
        <p:PaperSpinner ui:field="spinner4" addStyleNames="{style.green}" active=""/>
        <p:PaperSpinner ui:field="spinner5" active=""/>
        <g:Button ui:field="button">Toggle</g:Button>
    </g:HTMLPanel>
</ui:UiBinder>