<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
        >
    
    <ui:style>
        @external .menu-sample, .horizontal-section;

        .menu-sample .horizontal-section {
            padding: 0 !important;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="menu-sample">

        <div class="horizontal center-justified layout">
            <div>
                <h4>Standard</h4>
                <div class="horizontal-section">
                    <paper-menu class="list">
                        <paper-item>Inbox</paper-item>
                        <paper-item>Starred</paper-item>
                        <paper-item>Sent mail</paper-item>
                        <paper-item>Drafts</paper-item>
                    </paper-menu>
                </div>
            </div>

            <div>
                <h4>Pre-selected</h4>
                <div class="horizontal-section">
                    <paper-menu  class="list" selected="0">
                        <paper-item>Inbox</paper-item>
                        <paper-item disabled="">Starred</paper-item>
                        <paper-item>Sent mail</paper-item>
                        <paper-item>Drafts</paper-item>
                    </paper-menu>
                </div>
            </div>

            <div>
                <h4>Multi-select</h4>
                <div class="horizontal-section">
                    <paper-menu class="list" multi="">
                        <paper-item>Bold</paper-item>
                        <paper-item>Italic</paper-item>
                        <paper-item>Underline</paper-item>
                        <paper-item>Strikethrough</paper-item>
                    </paper-menu>
                </div>
            </div>
        </div>
        
    </g:HTMLPanel>
</ui:UiBinder>