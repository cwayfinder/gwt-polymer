<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.vaadin.polymer.paper.widget'>

    <ui:style>
        .view paper-tabs {
            background-color: #00bcd4;
            color: #fff;
            box-shadow: 0px 3px 2px rgba(0, 0, 0, 0.2);
        }

        .view h3 {
            font-size: 16px;
            font-weight: 400;
        }
    </ui:style>
    
    <g:HTMLPanel addStyleNames="{style.view}">
        <h2>Paper Tabs based on gwt-polymer widgets</h2>

        
        <p:PaperTabs ui:field="tabs">
            <g:Button>gwt button 1</g:Button>
            <g:Button>gwt button 2</g:Button>
            <p:PaperTab>ITEM ONE</p:PaperTab>
            <p:PaperTab>ITEM TWO</p:PaperTab>
            <p:PaperTab>ITEM THREE</p:PaperTab>
        </p:PaperTabs>

        <p:PaperToast ui:field="toast" text="Your message."/>
    </g:HTMLPanel>
</ui:UiBinder>